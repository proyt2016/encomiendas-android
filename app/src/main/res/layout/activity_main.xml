<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/mainlayout"
   >

    <!-- Editext para busqueda  -->
    <EditText
        android:id="@+id/inputsearch"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Buscar por nombre..."
        android:textSize="16dp"
        android:layout_marginLeft="16dp"
        android:inputType="textVisiblePassword"
        android:drawableLeft="@drawable/buscar"
        android:backgroundTint="@color/abc_background_cache_hint_selector_material_dark"
        android:textCursorDrawable="@drawable/color_cursor_edit_text"/>
    <!-- List View de elementos  -->
    <ListView
        android:id="@+id/listaterminales"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/inputsearch"
        android:layout_alignParentLeft="true"
        android:textFilterEnabled="true"
        />


</RelativeLayout>
