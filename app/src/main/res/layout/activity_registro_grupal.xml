<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sourcey.materiallogindemo.RegistroGrupal"

    android:background="@color/white"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/id_appbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/black"
        android:fitsSystemWindows="true">
        <TextView
            android:id="@+id/txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:text="Listado de Viajes"
            android:textSize="20dip"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
    </android.support.design.widget.AppBarLayout>



    <!-- Editext para busqueda  -->
    <EditText
        android:id="@+id/inputSearch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:hint="Ingrese Terminal.."
        android:textSize="16dp"
        android:textColorLink="@color/white"
        android:textColorHint="@color/material_blue_grey_800"
        android:inputType="textVisiblePassword"
        android:textColor="@color/black"
        android:background="#FFFFFFFF"
        android:layout_marginLeft="16dp"
        android:drawableLeft="@drawable/buscar"/>

    <!-- List View de elementos  -->
    <ListView
        android:id="@+id/listadoCoches"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/inputSearch"
        android:layout_alignParentLeft="true"
        android:textFilterEnabled="true"

        android:background="#b7ffffff" />


</RelativeLayout>
