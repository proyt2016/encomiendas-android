    <!-- Editext para busqueda  -->
    <EditText
        android:id="@+id/inputsearch"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Ingrese nombre..."
        android:textSize="16dp"
        android:layout_marginLeft="16dp"
        android:textCursorDrawable="@drawable/color_cursor_edit_text"
        android:backgroundTint="@color/abc_background_cache_hint_selector_material_dark"
        android:inputType="textVisiblePassword"
        android:drawableLeft="@drawable/buscar"/>

    <!-- List View de elementos  -->
    <ListView
